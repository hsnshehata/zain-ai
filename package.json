{
  "name": "ai-chat-controller",
  "version": "1.0.0",
  "description": "AI Chat Controller with Bot Management for Facebook and WhatsApp",
  "license": "MIT",
  "main": "server/server.js",
  "bin": "server/server.js",
  "scripts": {
    "start": "node server/server.js",
    "dev": "nodemon server/server.js",
    "test": "cross-env NODE_ENV=test jest --runInBand",
    "build:win": "pkg . --targets node18-win-x64 --output dist/zainbot-win.exe",
    "build:linux": "pkg . --targets node18-linux-x64 --output dist/zainbot-linux",
    "build:mac": "pkg . --targets node18-macos-x64 --output dist/zainbot-macos",
    "build:all": "npm run build:win && npm run build:linux && npm run build:mac"
  },
  "dependencies": {
    "axios": "^1.13.5",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "express-rate-limit": "^7.4.0",
    "form-data": "^4.0.0",
    "google-auth-library": "^9.14.1",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.3",
    "jwt-decode": "^4.0.0",
    "mongoose": "^8.7.0",
    "multer": "^1.4.5-lts.1",
    "node-cache": "^5.1.2",
    "node-cron": "^3.0.3",
    "node-fetch": "^3.3.2",
    "nodemailer": "^7.0.10",
    "openai": "^5.8.2",
    "qrcode": "^1.5.13",
    "sanitize-html": "^2.13.0",
    "winston": "^3.17.0",
    "uuid": "^10.0.0",
    "whatsapp-web.js": "^1.34.6",
    "wwebjs-mongo": "^1.1.0",
    "prom-client": "^16.4.0",
    "helmet": "^8.1.0"
  },
  "devDependencies": {
    "nodemon": "^3.2.1",
    "pkg": "^5.8.1",
    "jest": "^29.7.0",
    "supertest": "^7.1.1",
    "cross-env": "^7.0.3"
  },
  "pkg": {
    "assets": [
      "public/**/*",
      "uploads/**/*",
      "server/**/*.json",
      "node_modules/axios/dist/**/*"
    ],
    "outputPath": "dist"
  }
}
